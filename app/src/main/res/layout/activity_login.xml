<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Login">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="480dp"
        android:src="@drawable/mtemlogo" />




    <TextView
        android:layout_width="222dp"
        android:layout_height="61dp"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textColor="#002140"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>


    <EditText
        android:id="@+id/loEm"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_round"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="5dp"
        android:paddingLeft="10dip"
        android:hint="Enter email"
        />




    <EditText
        android:id="@+id/loPa"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_round"
        android:layout_below="@+id/loEm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"

        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="5dp"
        android:paddingLeft="10dip"
        android:hint="Enter password"
        android:inputType="textPassword"/>





    <Button
        android:id="@+id/loBt"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loPa"
        android:background="@drawable/button_round"
        android:text="Login"
        android:textSize="14dp"

        android:textColor="#fff"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/cAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="New here? Create an account."
        android:layout_below="@id/loBt"
        android:layout_centerHorizontal="true"
        android:textColor="#011f4b"/>


    <TextView
        android:id="@+id/forg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Forgot password?"
        android:layout_below="@id/loBt"
        android:layout_alignRight="@id/loBt"
        android:textColor="#011f4b"/>




</RelativeLayout>
